<!-- Loopback Submix Audio Policy Configuration file -->
<module name="loopback_submix" halVersion="1.0">
    <attachedDevices>
        <!-- <item>Loopback Submix Out</item> -->
    </attachedDevices>
    <mixPorts>
        <mixPort name="loopback_submix output" role="source">
            <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
                     samplingRates="16000" channelMasks="AUDIO_CHANNEL_OUT_MONO,AUDIO_CHANNEL_OUT_STEREO"/>
        </mixPort>
        <mixPort name="loopback_submix input" role="sink">
           <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
                    samplingRates="16000" channelMasks="AUDIO_CHANNEL_IN_MONO,AUDIO_CHANNEL_IN_STEREO"/>
        </mixPort>
   </mixPorts>
   <devicePorts>
       <devicePort tagName="Loopback Submix Out" type="AUDIO_DEVICE_OUT_LOOPBACK_SUBMIX"  role="sink">
           <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
                    samplingRates="16000" channelMasks="AUDIO_CHANNEL_OUT_MONO,AUDIO_CHANNEL_OUT_STEREO"/>
       </devicePort>
       <devicePort tagName="Loopback Submix In" type="AUDIO_DEVICE_IN_LOOPBACK_SUBMIX"  role="source">
           <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
                    samplingRates="16000" channelMasks="AUDIO_CHANNEL_IN_MONO,AUDIO_CHANNEL_IN_STEREO"/>
        </devicePort>
    </devicePorts>
    <routes>
        <route type="mix" sink="Loopback Submix Out"
               sources="loopback_submix output"/>
        <route type="mix" sink="loopback_submix input"
               sources="Loopback Submix In"/>
    </routes>
</module>
